{
    "manifest_version": 3,
    "name": "PFC - Portfolio Forecast",
    "version": "1.1.0",
    "description": "Your portfolio stress busting companion - Real-time 24-hour forecasting with AI-powered risk analysis",
    "permissions": [
        "activeTab",
        "storage",
        "alarms",
        "scripting"
    ],
    "action": {
        "default_popup": "popup/popup.html",
        "default_icon": {
            "16": "assets/icon16.png",
            "48": "assets/icon48.png",
            "128": "assets/icon128.png"
        }
    },
    "icons": {
        "16": "assets/icon16.png",
        "48": "assets/icon48.png",
        "128": "assets/icon128.png"
    },
    "background": {
        "service_worker": "background/service-worker.js"
    }
}